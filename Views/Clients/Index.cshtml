@model IEnumerable<Restaurant_Management.Models.Client>

<!DOCTYPE html>

<html>
<head>
    <title>Clients</title>
</head>
<body>
<div>
    <h1 class="table_title">Clientes</h1>
    <div class="row g-4">
    <!-- Formulario -->
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white fw-bold">
                Nuevo Cliente
            </div>
            <div class="card-body">
                <form asp-action="Store" method="post">
                    <div class="mb-3">
                        <label class="form-label">Nombres</label>
                        <input name="Name" type="text" required="required" class="form-control" placeholder="Ingrese nombres">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Apellidos</label>
                        <input name="LastNames" required="required" type="text" class="form-control" placeholder="Ingrese apellidos">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Correo</label>
                        <input name="Email" required="required" type="email" class="form-control" placeholder="ejemplo@mail.com">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Teléfono</label>
                        <input name="Phone" type="text" required="required" class="form-control" placeholder="Número de contacto">
                    </div>
                    <button class="btn btn-primary w-100">Guardar Cliente</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Tabla -->
    <div class="col-md-9">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white fw-bold">
                Lista de Clientes
            </div>
            <div class="card-body">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {
                            <tr>
                                <td>@client.Id</td>
                                <td>@client.Name</td>
                                <td>@client.LastNames</td>
                                <td>@client.Email</td>
                                <td>@client.Phone</td>
                                <td class="text-center">
                                    <a asp-controller="Clients" asp-action="Details" asp-route-id="@client.Id"
                                       class="btn btn-sm btn-info text-white">Detalles</a>
                                    <a asp-controller="Clients" asp-action="Edit" asp-route-id="@client.Id"
                                       class="btn btn-sm btn-warning text-white">Editar</a>
                                    <a asp-controller="Clients" asp-action="Destroy" asp-route-id="@client.Id"
                                       class="btn btn-sm btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</div>

</body>
</html>