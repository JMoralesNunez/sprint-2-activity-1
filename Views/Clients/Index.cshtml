@model Restaurant_Management.ViewModels.ClientsViewModel

<!DOCTYPE html>

<html>
<head>
    <title>Clients</title>
</head>
<body>
<div>
    <div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <form asp-action="Store" method="post">
                    <div class="mt-4">
                        <label asp-for="NewClient.Name" for="">Nombres</label>
                        <input asp-for="NewClient.Name" type="text" class="form-control">
                        <span asp-validation-for="NewClient.Name" class="text-danger"></span>
                    </div>
                    <div class="mt-4">
                        <label asp-for="NewClient.LastNames" for="">Apellidos</label>
                        <input asp-for="NewClient.LastNames" type="text" class="form-control">
                        <span asp-validation-for="NewClient.LastNames" class="text-danger"></span>
                    </div>
                    <div class="mt-4">
                        <label asp-for="NewClient.Email" for="">Correo</label>
                        <input asp-for="NewClient.Email" type="text" class="form-control">
                        <span asp-validation-for="NewClient.Email" class="text-danger"></span>
                    </div>
                    <div class="mt-4">
                        <label asp-for="NewClient.Phone" for="">Tel√©fono</label>
                        <input asp-for="NewClient.Phone" type="text" class="form-control">
                        <span asp-validation-for="NewClient.Phone" class="text-danger"></span>
                    </div>
                    <hr>
                    <button class="btn btn-primary w-100">Guardar Cliente</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["message"]
                    </div>
                }

                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>NAMES</th>
                        <th>LASTNAMES</th>
                        <th>EMAIL</th>
                        <th>PHONE</th>
                        <th>ACTIONS</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var client in Model.Clients)
                    {
                        <tr>
                            <th>@client.Id</th>
                            <th>@client.Name</th>
                            <th>@client.LastNames</th>
                            <th>@client.Email</th>
                            <th>@client.Phone</th>
                            <th>
                                <a asp-controller="Clients" asp-action="Details" asp-route-id="@client.Id"
                                   class="btn btn-info">Details</a>
                                <a asp-controller="Clients" asp-action="Edit" asp-route-id="@client.Id" class="btn btn-warning">Edit</a>
                                <a asp-controller="Clients" asp-action="Destroy" asp-route-id="@client.Id" class="btn btn-danger">Delete</a>
                            </th>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
</body>
</html>