@model IEnumerable<Restaurant_Management.Models.Client>

<!DOCTYPE html>

<html>
<head>
    <title>Clients</title>
</head>
<body>
<div>
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Store" method="post">
                        <div class="mt-4">
                            <label for="">Nombres</label>
                            <input name="Name" type="text" required="required" class="form-control">
                        </div>
                        <div class="mt-4">
                            <label for="">Apellidos</label>
                            <input name="LastNames" required="required" type="text" class="form-control">
                        </div>
                        <div class="mt-4">
                            <label for="">Correo</label>
                            <input name="Email" required="required" type="text" class="form-control">
                        </div>
                        <div class="mt-4">
                            <label for="">Tel√©fono</label>
                            <input name="Phone" type="text" required="required" class="form-control">
                        </div>
                        <hr>
                        <button class="btn btn-primary w-100">Guardar Cliente</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    @if (TempData["message"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["message"]
                        </div>
                    }

                    <table class="table table-striped table-sm">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>NAMES</th>
                            <th>LASTNAMES</th>
                            <th>EMAIL</th>
                            <th>PHONE</th>
                            <th>ACTIONS</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var client in Model)
                        {
                            <tr>
                                <th>@client.Id</th>
                                <th>@client.Name</th>
                                <th>@client.LastNames</th>
                                <th>@client.Email</th>
                                <th>@client.Phone</th>
                                <th>
                                    <a asp-controller="Clients" asp-action="Details" asp-route-id="@client.Id"
                                       class="btn btn-info">Details</a>
                                    <a asp-controller="Clients" asp-action="Edit" asp-route-id="@client.Id" class="btn btn-warning">Edit</a>
                                    <a asp-controller="Clients" asp-action="Destroy" asp-route-id="@client.Id" class="btn btn-danger">Delete</a>
                                </th>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>