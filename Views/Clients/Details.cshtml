
@model Restaurant_Management.Models.Client

<!DOCTYPE html>

<html>
<head>
    <title>Details</title>
</head>
<body>
<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold text-primary table_title">Detalles del Cliente</h2>
    <div class="row g-4">

        <!-- ID -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">ID del cliente</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Id</p>
                </div>
            </div>
        </div>

        <!-- Nombre -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Nombre del cliente</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Name</p>
                </div>
            </div>
        </div>

        <!-- Apellidos -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Apellidos del cliente</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.LastNames</p>
                </div>
            </div>
        </div>

        <!-- Email -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Email del cliente</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Email</p>
                </div>
            </div>
        </div>

        <!-- Teléfono -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Teléfono del cliente</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Phone</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Botón volver -->
    <div class="text-center mt-4">
        <a class="btn btn-outline-info px-4" asp-area="" asp-controller="Clients" asp-action="Index">
            ← Volver
        </a>
    </div>
</div>

</body>
</html>