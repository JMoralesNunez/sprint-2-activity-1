@model Restaurant_Management.Models.Plate

<!DOCTYPE html>

<html>
<head>
    <title>Plate</title>
</head>
<body>
<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold text-primary table_title">Detalles del Plato</h2>
    <div class="row g-4">

        <!-- ID -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">ID del Plato</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Id</p>
                </div>
            </div>
        </div>

        <!-- Nombre -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Nombre del Plato</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Name</p>
                </div>
            </div>
        </div>

        <!-- Descripción -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Descripción</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Description</p>
                </div>
            </div>
        </div>

        <!-- Precio -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Precio</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">$@Model.Price</p>
                </div>
            </div>
        </div>

        <!-- Categoría -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Categoría</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Category</p>
                </div>
            </div>
        </div>

    </div>

    <!-- Botón volver -->
    <div class="text-center mt-4">
        <a class="btn btn-outline-info px-4" asp-area="" asp-controller="Plates" asp-action="Index">
            ← Volver
        </a>
    </div>
</div>
</body>
</html>