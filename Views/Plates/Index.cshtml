@model IEnumerable<Restaurant_Management.Models.Plate>

<!DOCTYPE html>

<html>
<head>
    <title>Plates</title>
</head>
<body>
<div>
    <div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <form asp-action="Store" method="post">
                    <div class="mt-4">
                        <label for="">Nombre</label>
                        <input type="text" name="Name" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label for="">Descripción</label>
                        <textarea required="required" name="Description" class="form-control" cols="30" rows="3"></textarea>
                    </div>
                    <div class="mt-4">
                        <label for="">Precio</label>
                        <input type="number" name="Price" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label for="">Categoría</label>
                        <select name="Category" class="form-control">
                            <option value="" disabled selected>-- Seleccione el tipo de plato --</option>
                            <option value="Entrada">Entrada</option>
                            <option value="Plato fuerte">Plato fuerte</option>
                            <option value="Postre">Postre</option>
                            <option value="Bebida">Bebida</option>
                        </select>
                    </div>
                    <hr>
                    <button class="btn btn-primary w-100">Guardar Plato</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["message"]
                    </div>
                }

                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>NAMES</th>
                        <th>DESCRIPTION</th>
                        <th>PRICE</th>
                        <th>CATEGORY</th>
                        <th>ACTIONS</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var plate in Model)
                    {
                        <tr>
                            <th>@plate.Id</th>
                            <th>@plate.Name</th>
                            <th>@plate.Description</th>
                            <th>@plate.Price</th>
                            <th>@plate.Category</th>
                            <th>
                                <a asp-controller="Plates" asp-action="Details" asp-route-id="@plate.Id"
                                   class="btn btn-info">Details</a>
                                <a asp-controller="Plates" asp-action="Edit" asp-route-id="@plate.Id" class="btn btn-warning">Edit</a>
                                <a asp-controller="Plates" asp-action="Destroy" asp-route-id="@plate.Id" class="btn btn-danger">Delete</a>
                            </th>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
</body>
</html>