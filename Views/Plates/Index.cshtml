@model IEnumerable<Restaurant_Management.Models.Plate>

<!DOCTYPE html>

<html>
<head>
    <title>Plates</title>
</head>
<body>
<div>
    <h1 class="table_title">Platos</h1>
    <div class="row g-4">
    <!-- Formulario -->
    <div class="col-md-3">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white fw-bold">
                Nuevo Plato
            </div>
            <div class="card-body">
                <form asp-action="Store" method="post">
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" name="Name" required="required" class="form-control" placeholder="Ingrese nombre del plato">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea required="required" name="Description" class="form-control" rows="3" placeholder="Ingrese una breve descripción"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Precio</label>
                        <input type="number" required="required" name="Price" class="form-control" placeholder="Ej: 25000">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Categoría</label>
                        <select name="Category" required="required" class="form-select">
                            <option value="" disabled selected>-- Seleccione el tipo de plato --</option>
                            <option value="Entrada">Entrada</option>
                            <option value="Plato fuerte">Plato fuerte</option>
                            <option value="Postre">Postre</option>
                            <option value="Bebida">Bebida</option>
                        </select>
                    </div>
                    <button class="btn btn-primary w-100">Guardar Plato</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Tabla -->
    <div class="col-md-9">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white fw-bold">
                Lista de Platos
            </div>
            <div class="card-body">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Precio</th>
                            <th>Categoría</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var plate in Model)
                        {
                            <tr>
                                <td>@plate.Id</td>
                                <td>@plate.Name</td>
                                <td>@plate.Description</td>
                                <td>@plate.Price</td>
                                <td>@plate.Category</td>
                                <td class="text-center">
                                    <a asp-controller="Plates" asp-action="Details" asp-route-id="@plate.Id"
                                       class="btn btn-sm btn-info text-white">Detalles</a>
                                    <a asp-controller="Plates" asp-action="Edit" asp-route-id="@plate.Id"
                                       class="btn btn-sm btn-warning text-white">Editar</a>
                                    <a asp-controller="Plates" asp-action="Destroy" asp-route-id="@plate.Id"
                                       class="btn btn-sm btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
</body>
</html>