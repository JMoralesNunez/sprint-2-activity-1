@model Restaurant_Management.Models.Order

<!DOCTYPE html>

<html>
<head>
    <title>Orders</title>
</head>
<body>
<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold text-primary table_title">Detalles del Pedido</h2>
    <div class="row g-4">

        <!-- ID -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">ID de pedido</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Id</p>
                </div>
            </div>
        </div>

        <!-- Número de pedido -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Número de pedido</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.OrderNumber</p>
                </div>
            </div>
        </div>

        <!-- Fecha -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Fecha de pedido</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.Date.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>

        <!-- Estado -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Estado del pedido</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@Model.State</p>
                </div>
            </div>
        </div>

        <!-- Cliente -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-dark text-white fw-bold">Cliente</div>
                <div class="card-body">
                    <p class="mb-0 fs-5">@(Model.fk_ClientID?.ToString() ?? "N/A")</p>
                </div>
            </div>
        </div>

    </div>

    <!-- Botón volver -->
    <div class="text-center mt-4">
        <a class="btn btn-outline-info px-4" asp-area="" asp-controller="Orders" asp-action="Index">
            ← Volver
        </a>
    </div>
</div>

</body>
</html>