@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <h1 class="mb-4 text-center">Panel de Administración</h1>
    <div class="row g-4">

      <!-- Clientes -->
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center">
            <h5 class="card-title">👥 Clientes</h5>
            <p class="card-text">Gestión de clientes registrados.</p>
          </div>
        </div>
      </div>

      <!-- Meseros -->
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center">
            <h5 class="card-title">🧑‍🍳 Meseros</h5>
            <p class="card-text">Control de personal y turnos.</p>
          </div>
        </div>
      </div>

      <!-- Platos -->
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center">
            <h5 class="card-title">🍽️ Platos</h5>
            <p class="card-text">Administrar menú y precios.</p>
          </div>
        </div>
      </div>

      <!-- Pedidos -->
      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center">
            <h5 class="card-title">📝 Pedidos</h5>
            <p class="card-text">Seguimiento y control de pedidos.</p>
          </div>
        </div>
      </div>

      <!-- Reservas -->
      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center">
            <h5 class="card-title">📅 Reservas</h5>
            <p class="card-text">Gestión de reservas de mesas.</p>
          </div>
        </div>
      </div>

    </div>
  </div>

