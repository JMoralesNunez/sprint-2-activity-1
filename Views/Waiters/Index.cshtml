@model IEnumerable<Restaurant_Management.Models.Waiter>

<!DOCTYPE html>

<html>
<head>
    <title>Waiters</title>
</head>
<body>
<div>
    <div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <form asp-action="Store" method="post">
                    <div class="mt-4">
                        <label for="">Nombres</label>
                        <input type="text" name="Name" class="form-control">
                    </div>
                    <div class="mt-4">
                        <label for="">Apellidos</label>
                        <input type="text" name="LastNames" class="form-control">
                    </div>
                    <div class="mt-4">
                        <select id="shift" name="shift" class="form-control">
                            <option value="" disabled selected>-- Seleccione un turno --</option>
                            <option value="Día">Día</option>
                            <option value="Noche">Noche</option>
                        </select>
                    </div>
                    <div class="mt-4">
                        <label for="">Años de experiencia</label>
                        <input type="number" name="Experience" class="form-control">
                    </div>
                    <hr>
                    <button class="btn btn-primary w-100">Guardar Mesero/a</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["message"]
                    </div>
                }

                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>NAMES</th>
                        <th>LASTNAMES</th>
                        <th>SHIFT</th>
                        <th>EXPERIENCE</th>
                        <th>ACTIONS</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var waiter in Model)
                    {
                        <tr>
                            <th>@waiter.Id</th>
                            <th>@waiter.Name</th>
                            <th>@waiter.LastNames</th>
                            <th>@waiter.Shift</th>
                            <th>@waiter.Experience</th>
                            <th>
                                <a asp-controller="Waiters" asp-action="Details" asp-route-id="@waiter.Id"
                                   class="btn btn-info">Details</a>
                                <a asp-controller="Waiters" asp-action="Edit" asp-route-id="@waiter.Id" class="btn btn-warning">Edit</a>
                                <a asp-controller="Waiters" asp-action="Destroy" asp-route-id="@waiter.Id" class="btn btn-danger">Delete</a>
                            </th>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
</body>
</html>